programa {
  funcao inicio() {
    inteiro numero1, numero2, soma

    //ler o primeiro numero
    escreva("Digite o primeiro número: ")
    leia(numero1)
    escreva("Digite o segundo número: ")
    leia(numero2)

    //somar os dois
    soma = (numero1 + numero2)

    //apresentar o resultado
    escreva(soma)
  }
}
